#include<iostream>
#include<cstring>
using namespace std;
int main(){
     char str[100];
     cout<<"enter the string: ";
     cin>>str;
     int len = strlen(str);
     for(int i=0, j=len-1; i<j; i++, j--){
            int temp=str[i];
            str[i]=str[j];
            str[j]=temp;
     }
     cout<<"reversed array is: "<<str<<endl;
     return 0;
    }